// mode: Hard
// String 

//################################################################### Z-Algorithm ########################################################################################

//################################################################### Taking Advantage of String's inbuilt method ########################################################
#include <bits/stdc++.h>
int zAlgorithm(string s, string p, int n, int m){
    if(m>n)
        return 0;
    int totalCnt = 0;
    string tempString = "";
    for(int i=0; i<m; i++)
        tempString += s[i];
    for(int i=m; i<=n;i++){
        if(tempString == p)
            ++totalCnt;
        tempString = tempString.substr(1,m-1);
        tempString += s[i];
    }
    return totalCnt;
}
